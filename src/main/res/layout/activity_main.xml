<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <include layout="@layout/margenes" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="231dp"
        android:layout_height="271dp"
        android:layout_marginTop="172dp"
        app:layout_constraintEnd_toStartOf="@id/derecha"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintTop_toTopOf="@+id/arriba"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toStartOf="@id/derecha"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        android:layout_marginTop="80dp"
        android:text="@string/author_nombre"
        android:textColor="@color/colorPrimarioBlanco"
        android:textSize="@dimen/texto_pequeño"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toStartOf="@id/derecha"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginTop="10dp"
        android:text="@string/version_app"
        android:textSize="@dimen/texto_pequeñito"
        android:textStyle="bold"
        android:textColor="@color/colorPrimarioBlanco" />

</androidx.constraintlayout.widget.ConstraintLayout>