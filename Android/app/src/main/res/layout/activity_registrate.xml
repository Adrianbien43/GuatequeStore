<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E8FF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título y logo -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@android:drawable/ic_menu_add"
                android:background="#E8DAF8"
                android:padding="24dp"
                android:scaleType="centerInside"
                app:tint="#6A1B9A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#4A148C"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Únete a nuestra comunidad musical"
                android:textSize="16sp"
                android:textColor="#7B1FA2"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Formulario simple sin Material Components -->
        <LinearLayout
            android:id="@+id/formulario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Ej: Juan Pérez"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="textPersonName"
                android:maxLines="1" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="tucorreo@email.com"
                android:background="@android:drawable/edit_text"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <!-- Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Mínimo 6 caracteres"
                android:background="@android:drawable/edit_text"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:maxLines="1" />

            <!-- Confirmar Contraseña (NUEVO) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar Contraseña"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Repite tu contraseña"
                android:padding="14dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@android:drawable/edit_text" />

            <!-- CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxTerminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto los términos y condiciones"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:checked="true"
                android:buttonTint="#7B1FA2" />
        </LinearLayout>

        <!-- Botón Registrarse -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Registrarse"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7B1FA2"
            android:layout_marginTop="30dp"
            app:cornerRadius="28dp"
            app:layout_constraintTop_toBottomOf="@id/formulario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnVolverMenu"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Volver al Menú"
            android:textSize="16sp"
            android:textColor="#7B1FA2"
            android:backgroundTint="#00000000"
            app:strokeColor="#7B1FA2"
            app:strokeWidth="2dp"
            app:cornerRadius="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btnRegistrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>