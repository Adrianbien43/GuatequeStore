<?xml version="1.0" encoding="utf-8"?>
<ConstraintSet xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Configuración para orientación vertical -->
    <Constraint
        android:id="@+id/flow_imagenes"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintTop_toTopOf="@id/arriba"
        android:layout_marginTop="88dp" />

    <Constraint
        android:id="@+id/textView3"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintTop_toBottomOf="@id/flow_imagenes"
        android:layout_marginTop="40dp" />

    <Constraint
        android:id="@+id/flow_botones"
        app:layout_constraintStart_toStartOf="@id/izquierda"
        app:layout_constraintEnd_toEndOf="@id/derecha"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        app:flow_maxElementsWrap="1" />

</ConstraintSet>